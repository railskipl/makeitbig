<%- model_class = Review -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:stars) %></th>
      <th><%= model_class.human_attribute_name(:comments) %></th>
      <th><%= model_class.human_attribute_name(:product_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.name %></td>
        <td><%= pluralize(review.stars, 'star') %></td>
        <td><%= review.comments %></td>
        <td><%= review.product_id %></td>
        <td><%= time_ago_in_words(review.created_at) %> ago</td>
        <td>

          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_review_path(review.product_id, review),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
                       <%= link_to 'Edit', edit_product_review_path(review.product_id, review), class: 'button' %>
        </td>
      </tr>
    <% end %>
    <%= link_to t('.back', :default => t("helpers.links.back")),
            user_store_products_path(current_user, @store),
            :class => 'btn btn-primary' %>
  </tbody>
</table>


