<%- model_class = Review -%>
<div class="page-header">
  <h1><%= @product.name %> - Reviews</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:stars) %></th>
      <th><%= model_class.human_attribute_name(:comments) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.name %></td>
        <td><%= pluralize(review.stars, 'star') %></td>
        <td><%= review.comments %></td>
        <td><%= time_ago_in_words(review.created_at) %> ago</td>

      </tr>
    <% end %>
    <%= link_to t('.back', :default => t("helpers.links.back")),
            product_search_show_path(@product),
            :class => 'btn btn-primary' %>
  </tbody>
</table>


