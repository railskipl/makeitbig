<%= form_for [@product, @product_image], :html => { :class => 'form-horizontal' } do |f| %>
<%= render "shared/errors", object: @product_image %>
  <div class="control-group">
    <%= f.label :image, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :image %>
    </div>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_store_product_path(current_user, @store, @product), :class => 'btn' %>
  </div>
<% end %>
